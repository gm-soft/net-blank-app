{
  "Logging": {
    "MessageTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}",
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Properties": {
      "Application": "Company.IdentityServer"
    },
    "WriteToFileAllowed": true
  },
  "AllowedHosts": "*",
  "AllowedDomainEmails": {
    "Domains": "gmail.com"
  },
  "ApiResources": [
    {
      "Name": "api",
      "DisplayName": "Company Core API",
      "Scope": "api"
    }
  ],
  "IdentityServerOptions": {
    "LoginUrl": "/account/login",
    "LogoutUrl": "/account/logout",
    "LoginReturnUrlParameter": "returnUrl",
    "RaiseErrorEvents": true,
    "RaiseFailureEvents": true,
    "RaiseInformationEvents": true,
    "RaiseSuccessEvents": true
  },
  "AllowAnotherUserLoginOption": false,
  "ElasticSearch": {
    "ConnectionString": "http://localhost:9200",
    "AppName": "IdentityServer"
  }
}
