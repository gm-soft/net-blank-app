{
  "Logging": {
    "MessageTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}",
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Properties": {
      "Application": "Core.Api"
    },
    "WriteToFileAllowed": true
  },
  "AllowedHosts": "*",
  "IdentityServer": {
    "Audience": "core.api"
  },
  "AllowedDomainEmails": {
    "Domains": "gmail.com"
  },
  "ElasticSearch": {
    "AppName": "Core.Api",
    "ConnectionString": "http://localhost:9200"
  },
  "SendGridApiKey": "secret-send-grid-key"
}
